{
  "name": "bolt-language",
  "displayName": "Bolt Language",
  "description": "Syntax highlighting and IntelliSense for the Bolt programming language with native C modules, file I/O, and string utilities",
  "version": "0.4.0",
  "publisher": "bolt-lang",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "bolt",
    "language",
    "generic types",
    "arrays",
    "typescript-inspired",
    "compiled",
    "systems programming",
    "native modules",
    "file io",
    "string utilities"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/boltlang.git"
  },
  "main": "./src/extension.js",
  "activationEvents": [
    "onLanguage:bolt"
  ],
  "devDependencies": {
    "vscode-languageclient": "^7.0.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "bolt",
        "aliases": ["Bolt", "bolt"],
        "extensions": [".bolt"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "bolt",
        "scopeName": "source.bolt",
        "path": "./syntaxes/bolt.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "bolt.restartLSP",
        "title": "Restart Bolt Language Server",
        "category": "Bolt"
      },
      {
        "command": "bolt.showLSPOutput",
        "title": "Show Bolt LSP Output",
        "category": "Bolt"
      }
    ],
    "snippets": [
      {
        "language": "bolt",
        "path": "./snippets/bolt.json"
      }
    ]
  }
}