/** Prints a summary of all test results */
export fun printTestSummary() {
    print("")
    print("=== TEST SUMMARY ===")
    print("Total tests: ")
    print(totalTests)
    print("Passed: ")
    print(passedTests)
    print("Failed: ")
    print(failedTests)
    
    if (failedTests == 0) {
        print("ğŸ‰ All tests passed!")
    } else {
        print("ğŸ’¥ Some tests failed!")
    }
    print("====================")
}

