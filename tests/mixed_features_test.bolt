import { print } from "bolt:stdio"

fun main() {
    // Test mixing all our new features together
    val args := getArgs()
    val argCount := toString(args.length)
    
    print("Command line test:")
    print(argCount)
    
    // Test array with length and toString
    val data := [10, 20, 30, 40]
    print("Data array length:")
    print(toString(data.length))
    
    // Test string operations
    val message := "Hello"
    print("Message length:")
    print(toString(message.length))
    
    // Test complex nested expressions
    val complexSum := args.length + data.length + message.length
    val complexStr := toString(complexSum)
    print("Complex calculation:")
    print(complexStr)
    
    // Test for-in with different types
    print("Args iteration:")
    for arg in args {
        print(arg)
    }
    
    print("Data iteration:")
    for num in data {
        print(toString(num))
    }
}